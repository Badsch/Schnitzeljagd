<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg480x800"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RouteActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/routeTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Routetitle"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/strich" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/arrow_l"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.94"
                android:src="@drawable/arrow_l" />

            <Gallery
                android:id="@+id/gallery"
                android:layout_width="218dp"
                android:layout_height="190dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#55000000"
                android:spacing="16dp" />

            <ImageView
                android:id="@+id/arrow_r"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.01"
                android:src="@drawable/arrow_r" />

        </LinearLayout>

        <TextView
            android:id="@+id/LocationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Titlefield"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:layout_marginTop="10dp" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/diamond" />

                <TextView
                    android:id="@+id/locationHint1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hint 1"
                    android:textColor="@color/hint_color" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/diamond" />

                <TextView
                    android:id="@+id/locationHint2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hint 2"
                    android:textColor="@color/hint_color" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/ImageView03"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/diamond" />

                <TextView
                    android:id="@+id/locationHint3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hint 3"
                    android:textColor="@color/hint_color" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/ImageView04"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/diamond" />

                <TextView
                    android:id="@+id/locationHint4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hint 4"
                    android:textColor="@color/hint_color" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/ImageView05"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/diamond" />

                <TextView
                    android:id="@+id/locationHint5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hint 5"
                    android:textColor="@color/hint_color" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

    <Button
        android:id="@+id/scannButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:onClick="onClick"
        android:text="@string/scanbutton" />

</RelativeLayout>